<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_inherit_apparel_allocation" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.apparel.allocation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='note']" position="before">
                <group string="Allocation" invisible="not allocation_state">
                    <field name="allocation_state" widget="badge"
                           decoration-success="allocation_state == 'ready'"
                           decoration-warning="allocation_state == 'pending'"/>
                    <field name="allocation_message"
                           invisible="allocation_state != 'pending'"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
