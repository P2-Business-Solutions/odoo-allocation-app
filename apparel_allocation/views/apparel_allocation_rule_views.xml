<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_apparel_allocation_rule_form" model="ir.ui.view">
        <field name="name">apparel.allocation.rule.form</field>
        <field name="model">apparel.allocation.rule</field>
        <field name="arch" type="xml">
            <form string="Apparel Allocation Rule">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <field name="product_template_id"/>
                        <field name="attribute_id"/>
                        <field name="use_variants"/>
                        <field name="allow_partial"/>
                    </group>
                    <notebook>
                        <page string="Size Targets">
                            <field
                                name="line_ids"
                                context="{'default_rule_id': active_id}"
                                views="[(ref('view_apparel_allocation_rule_line_tree'), 'tree')]"
                            />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_apparel_allocation_rule_line_tree" model="ir.ui.view">
        <field name="name">apparel.allocation.rule.line.tree</field>
        <field name="model">apparel.allocation.rule.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="attribute_value_id"/>
                <field name="min_qty"/>
            </tree>
        </field>
    </record>

    <record id="view_apparel_allocation_rule_tree" model="ir.ui.view">
        <field name="name">apparel.allocation.rule.tree</field>
        <field name="model">apparel.allocation.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id"/>
                <field name="product_template_id"/>
                <field name="use_variants"/>
                <field name="allow_partial"/>
            </tree>
        </field>
    </record>

    <record id="action_apparel_allocation_rules" model="ir.actions.act_window">
        <field name="name">Allocation Rules</field>
        <field name="res_model">apparel.allocation.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create apparel allocation rules to guarantee well-balanced size assortments.
            </p>
        </field>
    </record>

    <menuitem id="menu_apparel_allocation_root" name="Apparel Allocation" parent="sale.sale_menu" sequence="80"/>
    <menuitem id="menu_apparel_allocation_rules" name="Allocation Rules" parent="menu_apparel_allocation_root" sequence="10" action="action_apparel_allocation_rules"/>
</odoo>
