<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_apparel_allocation" model="ir.ui.view">
        <field name="name">res.config.settings.apparel.allocation</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Apparel Allocation" name="apparel_allocation">
                    <block title="Allocation Defaults">
                        <setting string="Use Product Variants for Apparel Allocation"
                                 help="When enabled, allocation rules evaluate individual product variants (e.g., sizes) by default. Individual rules can override this setting.">
                            <field name="use_apparel_product_variants"/>
                        </setting>
                        <setting string="Default Incoming Stock Lookahead (days)"
                                 help="Default number of days to look ahead for incoming stock when computing availability. Individual rules can override this value. Set to 0 to consider on-hand stock only.">
                            <field name="apparel_default_incoming_days"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
