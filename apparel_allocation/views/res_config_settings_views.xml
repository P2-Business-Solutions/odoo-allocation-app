<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_apparel_allocation" model="ir.ui.view">
        <field name="name">res.config.settings.apparel.allocation</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="sale_order" position="after">
                <h2>Apparel Allocation</h2>
                <div class="row mt16 o_settings_container" id="apparel_allocation_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="use_apparel_product_variants"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="use_apparel_product_variants"/>
                            <div class="text-muted">
                                When enabled, allocation rules evaluate individual product variants (e.g., sizes)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
